function img404(modelo)
  '**IMAGEM NAO EXISTE
  Select Case modelo
    Case 1 'IMAGEM base64 exibe imagem amigável
    img404Base64  = ""
    img404        = " onerror='this.src=`data:image/png;base64,"&img404Base64&"`' "

    Case 2 '
    img404        = ""
  End Select
  
end function
'EXEMPLO DE USO
'response.write("<img src='imagem-nao-existe.png' "&img404(1)&">")

function imgSRC(Folder,File)
    urlImagem = arqEx(File, Folder)

    if instr(urlImagem, "?")>0 then
        urlImagem = urlImagem&"&imageFallback=FALSE"
    else
        urlImagem = urlImagem&"?imageFallback=FALSE"
    end if

    imgSRC = urlImagem
end function
